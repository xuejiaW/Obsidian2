{
    "metadata": [
        {
            "src": [
                {
                    "src": "../",
                    "files": [
                        "**/*.csproj"
                    ]
                }
            ],
            "dest": "api",
            "memberLayout": "separatePages"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "output": "_site",
        "template": [
            "default",
            "templates/unity"
        ],
        "globalMetadata": {
            "_appName": "Obsidian2",
            "_appTitle": "Obsidian2",
            "_enableSearch": true,
            "pdf": false
        }
    }
}